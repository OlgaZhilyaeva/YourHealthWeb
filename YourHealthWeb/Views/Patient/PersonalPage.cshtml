                            <td>DrugName3</td>
                            <td>Quantity3</td>
                            <td>FinishDate3</td>
                        </tr>
                        <tr data-href="prescription.html">
                            <th scope="row">4</th>
                            <td>StartDate4</td>
                            <td>DrugName4</td>
                            <td>Quantity4</td>
                            <td>FinishDate4</td>
                        </tr>
                        <tr data-href="prescription.html">
                            <th scope="row">5</th>
                            <td>StartDate5</td>
                            <td>DrugName5</td>
                            <td>Quantity5</td>
                            <td>FinishDate5</td>
                        </tr>
                        <tr data-href="#">
