@using YourHealthWeb.Models
@model IEnumerable<YourHealthWeb.Models.Patient>

<!doctype html>
<html lang="en">
<head>
    <title>Patients| WebClinic</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" type="text/css" />
    
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="#">WebClinic</a>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item"><a href="departments.html">Departments</a></li>
            <li class="breadcrumb-item"><a href="wards.html">Wards</a></li>
            <li class="breadcrumb-item active" aria-current="page">Patients</li>
        </ul>
    </nav>
    <div class="container">

        <div class="col-lg-9 ">
            <h1>Patients</h1>
            <div class="jumbotron w-100">
                @foreach (var patient in Model)
                {
                    <div class="block-list">
                        <a href="patientpage.html" id="patient1">@patient.Name</a>
                        <button type="button" class="btn btn-primary" id="patient1rep">Report</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
</body>
</html>