                            <th scope="col">Quantity</th>
                            <th scope="col">Finish</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr data-href="prescription.html">
                            <th scope="row">1</th>
                            <td>StartDate1</td>
                            <td>DrugName1</td>
                            <td>Quantity1</td>
                            <td>FinishDate1</td>
                        </tr>
                        <tr data-href="prescription.html">
                            <th scope="row">2</th>
                            <td>StartDate2</td>
                            <td>DrugName2</td>
                            <td>Quantity2</td>
                            <td>FinishDate2</td>
                        </tr>
                        <tr data-href="prescription.html">
