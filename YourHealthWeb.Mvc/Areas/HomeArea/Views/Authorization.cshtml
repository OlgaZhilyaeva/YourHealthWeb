
@{
    ViewData["Title"] = "StartUp | WebClinic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="#">WebClinic</a>
</nav>
<div class="container">
    <div class="col-lg-6">
        <div class="jumbotron w-100 ">

            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                <div class="form-group h-100">
                    <label for="exampleInputEmail1">Email address</label>
                    @Html.TextBox("emailHelp", "Enter your login", new { @class = "form-control", type = "text" })
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    @Html.TextBox("InputPassword", "Password", new { @class = "form-control", type = "password" })
                </div>
                <div class="form-check">
                </div>
                <button type="submit" class="btn btn-primary mx-auto">Submit</button>
            }

